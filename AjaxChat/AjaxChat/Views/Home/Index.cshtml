
@{
    ViewBag.Title = "Index";
}

<h2>Chat Home Page</h2>

@using (Html.BeginForm("StartChat", "Home"))
{
    <div class="row">
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.Label("Enter Name") :
        </div>  
    </div>
    <div class="row">
          
        <div class="col-md-2 col-sm-3 col-lg-3">
            <div class="input-group">
                @Html.TextBox("name",null, new { @class = "form-control" })
                <span class="input-group-btn">
                    <input id="btnSend" type="submit" class="btn btn-default" value="Enter" />
                </span>
            </div><!-- /input-group -->
        </div>
    </div>
}